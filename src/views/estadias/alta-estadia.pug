extends ../layout/index

block content
    div.py-10  
        h1.text-center.text-4xl.my-10.font-extrabold.text-greenTIC Estadías
            span.font-normal.text-petrolTIC TIC
        h2.text-center.text-3xl.font-extrabold.text-grayTIC= page

        if errors
            each error in errors
                div(class="mx-auto max-w-md text-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert")
                    strong(class="font-bold") Error:
                    span= error.msg
                    button(class="absolute top-0 bottom-0 right-0 px-4 py-3" aria-label="Close" onclick="this.parentElement.style.display='none'")
                        i(class="fas fa-times")

        script.
            setTimeout(function(){
                var alerts = document.querySelectorAll('[role="alert"]');
                alerts.forEach(function(alert) {
                    alert.style.display = 'none';
                });
            }, 5000);
        
        .mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow-xl.rounded-lg
                form.space-y-5(action="registrar" method="POST" noValidate)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="name") Actividades:
                        input#actividades.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="Actividades a realizar" name="actividades" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="requisitos") Requisitos:
                        input#requisitos.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="Requisitos para postulación" name="requisitos" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="vacantes") Total de vacantes:
                        input#vacantes.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="10, 15, 20" name="vacantes" type="number" step="1")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="solicitante") Solicitante:
                        input#solicitante.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="Nombre del solicitante de estadía" name="solicitante" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="cargo") Cargo del solicitante:
                        input#cargo.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="Estudiante, alumno" name="cargo" type="text" )
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="duracion") Duración:
                        input#duracion.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="4 meses" name="duracion" type="number" step="1")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="metodo") Método de selección:
                        input#seleccion.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="Promedio, disponibilidad..." name="direccion" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="empresa") Empresa:
                        input#empresa.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC"  name="empresa" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="programa") Programa educativo:
                        select#programa.form-select
                            option(value="TSU") Técnico Superior Universitario
                            option(value="ingenieria") Ingeniería        
                    div 
                        input#button_register-estadia.w-full.bg-petrolTIC.text-creamTIC.font-bold.py-3.rounded-xl(class="hover:bg-greenTIC cursor-pointer" type="submit" value="Dar de alta estadía")

                    div.flex.items-center.justify-around.pt-10
                        a.text-sm.text-greenTIC(href="/login" class="hover:text-petrolTIC decoration-4 cursor-pointer") Ver listado estadías