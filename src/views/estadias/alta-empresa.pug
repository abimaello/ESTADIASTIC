extends ../layout/index

block contenido 
    div.py-10  
        h1.text-center.text-4xl.my-10.font-extrabold.text-greenTIC Estadías
            span.font-normal.text-petrolTIC TIC
        h2.text-center.text-3xl.font-extrabold.text-grayTIC= page

        if errors
            each error in errors
                div(class="mx-auto max-w-md text-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert")
                    strong(class="font-bold") Error:
                    span= error.msg
                    button(class="absolute top-0 bottom-0 right-0 px-4 py-3" aria-label="Close" onclick="this.parentElement.style.display='none'")
                        i(class="fas fa-times")

        script.
            setTimeout(function(){
                var alerts = document.querySelectorAll('[role="alert"]');
                alerts.forEach(function(alert) {
                    alert.style.display = 'none';
                });
            }, 5000);
        
        .mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow-xl.rounded-lg
                form.space-y-5(action="registrar" method="POST" noValidate)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="name") Nombre de la empresa:
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="Nombre comercial" name="name" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="giro") Giro de la empresa:
                        input#giro.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="Tecnología, Industria, Automotriz..." name="giro" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="tel") Teléfono:
                        input#tel.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="00 0000 0000" name="tel" type="tel" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="tel2") Teléfono adicional:
                        input#tel2.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="00 0000 0000" name="tel2" type="tel" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="sitioweb") Sitio web:
                        input#sitioweb.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="www.empresa.com" name="sitioweb" type="text" )
                    div
        
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="email") Email:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="user@domain.com" name="email" type="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="direccion") Dirección:
                        input#direccion.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC" placeholder="Calle, Número y Colonia" name="direccion" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="municipio") Municipio:
                        input#municipio.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC"  name="municipio" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="estado") Estado:
                        input#estado.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC"  name="estado" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="pais") País:
                        input#pais.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC"  name="pais" type="text" )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="cp") Código Postal:
                        input#cp.w-full.px-3.py-2.border.border-gray-300.rounded-sm.text-petrolTIC(class="placeholder:text-greenTIC"  placeholder="00000" name="cp" type="text" )

        
                    div 
                        input#button_register.w-full.bg-petrolTIC.text-creamTIC.font-bold.py-3.rounded-xl(class="hover:bg-greenTIC cursor-pointer" type="submit" value="Dar de alta empresa")

                    div.flex.items-center.justify-around.pt-10
                        a.text-sm.text-greenTIC(href="/login" class="hover:text-petrolTIC decoration-4 cursor-pointer") Ver listado empresas