extends ../layout/index 
block content 
    div.py-10 
        h1.text-center.text-4xl.my-10.font-extrabold.text-greenTIC UTXJ 
            span.font-normal.text-grayTIC ESTADIAS TIC
        h2.text-center.text-3xl.font-extrabold.text-petrolTIC= page 

        if errors
            each error in errors
                div(class="mx-auto max-w-md text-center  bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4 text-xs" role="alert")
                    strong(class="font-bold ") Error:
                    span= error.msg
                    button(class="absolute top-0 bottom-0 right-0 px-4 py-3" aria-label="Close" onclick="this.parentElement.style.display='none'")
                        i(class="fas fa-times")

        script.
            setTimeout(function(){
                var alerts = document.querySelectorAll('[role="alert"]');
                alerts.forEach(function(alert) {
                    alert.style.display = 'none';
                });
            }, 5000);

        .mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow-x1.rounded-lg.shadow-2xl
                form.space-y-5(action="" method="POST" noValidate)
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for= "email") Email:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="n.trabajador@utxicotepec.edu.mx" name="email" type="email")
                    
                    input(class="w-full bg-greenTIC hover:bg-petrolTIC text-white font-bold py-3 cursor-pointer" type="submit" value="Reestablecer contrase√±a")

                    .flex.items-center.justify-center
                        a.text-gray-500.text-xs(href="/login/registerAdmin") Registro
